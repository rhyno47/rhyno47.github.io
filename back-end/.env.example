###############################################
# Copy this file to .env and fill in the values
###############################################

# Required: your MongoDB connection string (Atlas recommended)
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<database>?retryWrites=true&w=majority

# Optional: secondary connection string (non-SRV) if primary fails
# MONGODB_URI_FALLBACK=mongodb://127.0.0.1:27017/<database>

# JWT secret for signing tokens (use a long random string)
JWT_SECRET=please_change_me_to_a_long_random_string

# Frontend base URL (used for CORS and email links)
FRONTEND_URL=https://rhyno47.github.io

# Public base URL of this API (e.g., your Render/Railway URL)
# API_PUBLIC_URL=https://your-api-host.onrender.com

# Comma-separated list of additional allowed origins for CORS (optional)
# CORS_ORIGIN=https://your-other-frontend.com,https://admin.yourdomain.com

# Email verification is disabled for now; set to true when ready
EMAIL_VERIFY_ENABLED=false

# SendGrid (only needed when EMAIL_VERIFY_ENABLED=true)
# SENDGRID_API_KEY=SG.xxxxx
# MAIL_FROM=no-reply@yourdomain.com

# Enable diagnostics endpoint /diag (optional)
# DEBUG_DIAG=true

# Port override (Render sets PORT automatically; local default is fine)
PORT=5000
